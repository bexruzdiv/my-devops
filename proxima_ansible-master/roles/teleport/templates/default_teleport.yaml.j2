teleport:
  nodename: "{{ansible_facts.hostname}}"
  auth_token: "{{ teleport_auth_token }}"
  ca_pin: "{{ teleport_ca_pin }}"
  auth_servers:
{% for auth_server in teleport_auth_servers %}
    - "{{ auth_server }}"
{% endfor %}
  log:
    output: stderr
    severity: INFO
ssh_service:
  enabled: "yes"
  pam:
    enabled: true
    service_name: "sshd"
  labels:
    project: "{{ ansible_facts.hostname.split('-')[0] }}"
    env: "{{ ansible_facts.hostname.split('-')[1] | default('')}}"
    type: "{{ ansible_facts.hostname.split('-')[2] | default('')}}-{{ ansible_facts.hostname.split('-')[3] | default('')}}"
  commands:
  - name: hostname
    command: [hostname]
    period: 5m0s
  - name: uptime
    command: [uptime, -p]
    period: 5m0s
  - name: external_ip
    command: [curl, -s, ifconfig.me]
    period: 5m0s  
proxy_service:
  enabled: "no"
auth_service:
  enabled: "no"