storage "raft" {
  path    = "/opt/vault/data"
  node_id = "raft_node_2"
}

listener "tcp" {
  address       = {{ domain_2 }}:8200"
  tls_disable   = false  # Enable TLS
  tls_cert_file = "/etc/letsencrypt/live/{{ domain_2 }}/fullchain.pem"
  tls_key_file  = "/etc/letsencrypt/live/{{ domain_2 }}/privkey.pem"
}

api_addr     = "https://{{ domain_2 }}:8200"
cluster_addr = "https://{{ domain_2 }}:8201"
ui           = true