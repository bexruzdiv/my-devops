storage "raft" {
  path    = "/opt/vault/data"
  node_id = "raft_node_2"
}

listener "tcp" {
  address       = "0.0.0.0:8200"
  tls_disable   = false  # Enable TLS
  tls_cert_file = "/opt/vault/tls/fullchain1.pem"
  tls_key_file  = "/opt/vault/tls/privkey1.pem"
}

api_addr     = "https://{{ domain_2 }}:8200"
cluster_addr = "https://{{ domain_2 }}:8201"
ui           = true