storage "raft" {
  path    = "/opt/vault/data"
  node_id = "raft_node_3"
}

listener "tcp" {
  address       = {{ domain_3 }}:8200"
  tls_disable   = false  # Enable TLS
  tls_cert_file = "/etc/letsencrypt/live/{{ domain_3 }}/fullchain.pem"
  tls_key_file  = "/etc/letsencrypt/live/{{ domain_3 }}/privkey.pem"
}

api_addr     = "https://{{ domain_3}}:8200"
cluster_addr = "https://{{ domain_3 }}:8201"
ui           = true